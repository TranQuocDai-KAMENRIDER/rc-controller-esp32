#include <Arduino.h>
#include <WiFi.h>

void setup() {
  Serial.begin(115200);
  
  // Phải bật chế độ Station thì mới đọc đúng MAC dùng cho ESP-NOW
  WiFi.mode(WIFI_STA);
  
  Serial.println("\n\n-----------------------------");
  Serial.print("DIA CHI MAC CUA CON CHIP NAY LA: ");
  Serial.println(WiFi.macAddress());
  Serial.println("-----------------------------\n");
}

void loop() {
  // Không làm gì cả
}
